<div class="container middle">
  <div class=" m-3">
  <h2><%= @restaurant.name %></h2>
  <p class="fs-5 m-3"><%= @restaurant.address %></p>
  <p class="fs-5 m-3"><%= @restaurant.category %></p>
  <p class="fs-5 m-3"><%= @restaurant.phone_number %></p>

  <p><strong>Reviews</strong></p>

  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %></li>
    <% end %>
  </ul>

  <div class="container">
<h1>New review</h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: [1, 2, 3, 4, 5] %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
</div>


  <%= link_to "back", restaurants_path, :class => "fs-6 m-3"%>

</div>
